return {
  -- Ensure TreeSitter parsers
  {
    "nvim-treesitter/nvim-treesitter",
    opts = function(_, opts)
      vim.list_extend(opts.ensure_installed, { "vue", "typescript", "javascript", "css", "scss" })
      opts.highlight = opts.highlight or {}
      opts.highlight.additional_vim_regex_highlighting = { "vue" }
    end,
  },

  -- Configure LSP servers
  {
    "neovim/nvim-lspconfig",
    opts = {
      setup = {
        ts_ls = function(_, opts)
          local mason_registry = require("mason-registry")
          local vue_language_server_path = mason_registry.get_package("vue-language-server"):get_install_path()
            .. "/node_modules/@vue/language-server"

          opts.init_options = {
            plugins = {
              {
                name = "@vue/typescript-plugin",
                location = vue_language_server_path,
                languages = { "vue" },
              },
            },
          }
          opts.filetypes = { "javascript", "typescript", "javascriptreact", "typescriptreact", "vue" }
          return true
        end,
      },
      servers = {
        volar = {
          filetypes = { "vue" },
        },
      },
    },
  },
}
